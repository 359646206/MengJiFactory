<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="com.pet.test.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/settings"
                    android:layout_width="@dimen/stop_button_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/item_padding_horizontal"
                    android:layout_marginEnd="@dimen/item_padding_horizontal"
                    android:background="@drawable/tv_bg_selector"
                    android:gravity="center"
                    android:text="@string/settings" />
            </RelativeLayout>

            <!-- #1 -->
            <com.pet.test.view.ItemView
                android:id="@+id/item_1"
                android:layout_marginTop="@dimen/item_margin_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"/>

            <com.pet.test.view.ItemView
                android:id="@+id/item_2"
                android:layout_marginTop="@dimen/item_margin_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"/>

            <com.pet.test.view.ItemView
                android:id="@+id/item_3"
                android:layout_marginTop="@dimen/item_margin_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"/>

            <com.pet.test.view.ItemView
                android:id="@+id/item_4"
                android:layout_marginTop="@dimen/item_margin_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"/>

            <com.pet.test.view.ItemView
                android:id="@+id/item_5"
                android:layout_marginTop="@dimen/item_margin_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
